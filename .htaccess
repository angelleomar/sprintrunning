# Activa el módulo de reescritura
RewriteEngine On

# Redirige solicitudes sin .html al archivo correspondiente
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]

# Opcional: Redirige automáticamente URL con .html a la versión limpia (sin .html)
RewriteCond %{THE_REQUEST} \s/([^\s]+)\.html
RewriteRule ^ %1 [R=301,L]
